{
	"compilerOptions": {
		// 编译目标：编译后的 JavaScript 版本为最新的 ECMAScript 标准
		"target": "ESNext",
		// 模块系统：使用最新的 ECMAScript 模块标准
		"module": "ESNext",
		// 编译时引入的库文件：包含最新 ES 标准、DOM 和 DOM 可迭代对象的类型定义
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		// 使用 defineProperty 来定义类字段（符合最新标准）
		"useDefineForClassFields": true,
		// 跳过对声明文件（.d.ts）的类型检查，提升编译速度
		"skipLibCheck": true,
		// 允许编译 JavaScript 文件
		"allowJs": true,
		// 模块解析策略：使用打包工具（如 Vite）的解析方式
		"moduleResolution": "bundler",
		// 生成 source map 文件，方便调试
		"sourceMap": true,
		// 生成相应的 .d.ts 声明文件
		"declaration": true,
		// 在 watch 模式下保留上次编译输出，便于观察变化
		"preserveWatchOutput": true,
		// 移除编译后代码中的注释
		"removeComments": true,
		// 允许导入 TypeScript 扩展名文件（.ts、.tsx）
		"allowImportingTsExtensions": true,
		// 允许导入 JSON 文件并进行类型推断
		"resolveJsonModule": true,
		// 每个文件作为独立模块编译（不依赖全局声明）
		"isolatedModules": true,
		// 不生成输出文件（由打包工具负责）
		"noEmit": true,
		// JSX 转换方式：使用 React 17+ 的新 JSX 转换
		"jsx": "react-jsx",
		// 启用 ES 模块互操作性，允许 default import CommonJS 模块
		"esModuleInterop": true,

		// 启用所有严格类型检查选项
		"strict": true,
		// 启用严格的 null 检查（已包含在 strict 中）
		"strictNullChecks": true,
		// 禁止隐式 any 类型（已包含在 strict 中）
		"noImplicitAny": true,
		// 检查未使用的局部变量
		"noUnusedLocals": true,
		// 检查未使用的函数参数
		"noUnusedParameters": true,
		// 检查 switch 语句中是否有 fallthrough 情况
		"noFallthroughCasesInSwitch": true,
		// catch 子句中的变量类型为 any 而非 unknown
		"useUnknownInCatchVariables": false,

		// 模块解析的基准目录
		"baseUrl": ".",
		// 路径映射：配置模块导入别名
		"paths": {
			"@/*": ["src/*"], // @/ 映射到 src/ 目录
			"#/*": ["src/types/*"] // #/ 映射到 src/types/ 目录
		}
	},
	// 包含的文件或目录
	"include": ["src", "src/types", "tailwind.config.ts"],
	// 排除的文件或目录
	"exclude": ["node_modules", "dist"]
}
